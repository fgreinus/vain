{
    "name": "vainproject/vain",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel", "vain"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "Apache-2.0",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "laravel/socialite": "~2.0",
        "laravelcollective/html": "5.1.*",
        "laravelrus/localized-carbon": "dev-master",
        "davejamesmiller/laravel-breadcrumbs": "3.*",
        "pingpong/modules": "2.1.*",
        "dowilcox/knp-menu-laravel": "dev-master",
        "barryvdh/laravel-debugbar": "2.0.*",
        "filp/whoops": "1.1.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Vain\\": "app/",
            "Modules\\": "modules/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
